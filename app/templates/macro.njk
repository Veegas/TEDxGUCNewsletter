{% macro team(title, image, body)%}
<div class="team team__body slide" data-anchor="team-{{title}}">
  <div class="team__body__container">
    <h2 class="team__body__title">
      {{title}} Tribe
    </h2>
    <div class="team__body__image-container">
      <div class="team__body__image__wrapper">
        <img class="team__body__image" src="images/tedx/{{image}}" alt="{{title}} Team">
      </div>
    </div>
    <div class="team__body__content-container">
      <h3 class="font_content flow-text">
        {{body}}
      </h3>
    </div>
  </div>
</div>

{% endmacro %}


{% macro internal(title, image, body)%}
<div class="team team__body slide" data-anchor="{{title}}">
  <div class="team__body__container">
    <h2 class="team__body__title">
      {{title}}
    </h2>
    {% if image %}
    <div class="team__body__image-container">
      <div class="team__body__image__wrapper">
        <img class="team__body__image" src="images/tedx/{{image}}" alt="{{title}}">
      </div>
    </div>
    {% endif %}
    <div class="team__body__content-container">
      <h6 class="font_content flow-text">
        {{body | safe}}
      </h6>
    </div>
  </div>
</div>

{% endmacro %}
